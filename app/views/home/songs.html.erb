<div id="first">
  <%= render :partial => 'layouts/big_logo' %>
</div>
<div id="songs" class="fullsize main-section">
  <h1 class="main-title">~Song Requests~</h1>

  <div class="jumbotron">
    <div class="text-div">
      <div id="request_title">
        <p class="center">
          We hope that everyone hears at least one record they love on the day.
        </p>

        <p>
          Please complete the form below to give us your top three.
        </p>
      </div>

      <div id="song_request_thanks" style="display:none">
        <h3>
          Thanks You.
        </h3>
        <p>
          You can request as many songs as you like...

          <div class="btn btn-primary" onclick="showSongForm()">
            Add Another Song
          </div>
        </p>
      </div>
    <%= form_for @song_request, remote:true do |f| %>
      <div class="field">
        <%= f.label :name, "Your name?" %>
        <%= f.text_area :name %>
      </div>
      <div class="field">
        <%= f.label :song_name, "Which song(s) would you like to hear?" %>
        <%= f.text_area :song_name  %>
      </div>
      <div class="field">
        <%= f.label :content, "Anything else?" %>
        <%= f.text_area :content  %>
      </div>
      <div>
        <%= f.submit "Send to the DJ", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<script charset="utf-8">
  function showSongForm(){
    $("#new_song_request").fadeIn();
    $("#song_request_thanks").hide();
    $("#request_title").fadeIn();

  }
</script>
